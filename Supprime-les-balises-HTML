#                     Supprime les balises HTML et PHP d'une cha√Æne
###########################################################################################

###########################################
# Exemple 1
###########################################

<?php
$text = '<p>Test paragraph.</p><!-- Comment --> <a href="/manuel-php/" data-lbox="1" title="Manuel PHP - Other text">Other text</a>';
echo strip_tags($text);

 
// Autorise <p> et <a>
echo strip_tags($text, '<p><a>');
?>

